{
  "name": "type-safe-request",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:next": "next dev",
    "dev:aspida": "aspida --watch",
    "build": "aspida && next build",
    "start": "next start",
    "lint-check": "yarn lint:eslint && yarn check:prettier",
    "lint:eslint": "next lint",
    "check:prettier": "prettier --check \"./{public,src}/**/*.{js,jsx,ts,tsx,html,gql,graphql,json}\"",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn check:prettier --write",
    "prepare": "simple-git-hooks || echo 'Can not set git hooks'",
    "preinstall": "typesync || echo 'skip typesync'"
  },
  "dependencies": {
    "@aspida/fetch": "^1.7.1",
    "next": "12.0.9",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/eslint": "8.4.1",
    "@types/node": "^17.0.13",
    "@types/prettier": "^2.4.3",
    "@types/react": "^17.0.38",
    "@types/react-dom": "17.0.2",
    "eslint": "8.7.0",
    "eslint-config-next": "12.0.9",
    "eslint-config-prettier": "^8.3.0",
    "lint-staged": "^12.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "simple-git-hooks": "^2.7.0",
    "typescript": "^4.5.5",
    "typesync": "^0.8.0"
  },
  "volta": {
    "node": "16.13.0",
    "yarn": "1.22.17"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn run -s lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write --loglevel=error",
      "eslint --fix --quiet"
    ],
    "./**/*.{html,gql,graphql,json}": [
      "prettier --write --loglevel=error"
    ]
  }
}
